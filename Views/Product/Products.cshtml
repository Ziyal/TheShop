<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Products</title>
  </head>
  <body>
    <div class="products-container">
        <div class="product_form">
            <h3 class="add_product">Add a Product</h3>
            <div class="add-form">
                <form action="add-product" method="post">
                    <h6>Name: </h6><input type="text" name="Name" class="form-control">
                    <h6>Image (url): </h6><input type="text" name="Image" class="form-control">
                    <h6>Description: </h6><textarea type="text" name="Description" class="form-control"></textarea>
                    <h6>Initial Quantity: </h6><input type="text" name="Quantity" class="form-control"><br>
                    <input type="submit" value="Add Product" class="btn btn-default btn-block">
                </form>
            </div>
            <div class="errors">
                @{
                    if (ViewBag.Errors != null) {
                        foreach(var error in ViewBag.Errors) {
                            <p class="alert alert-warning">@error</p>
                        }
                    }
                }
            </div>            
        </div>

        <div class="all_products">
            <h1 class="title-text">Products</h1>
            @{ 
                foreach (var item in @ViewBag.Products) {
                    <div class="product">
                        <h5 class="product_title">@item.Name</h5>
                        <img src="@item.Image" width="130px">
                        <h6 class="product-description">@item.Description</h6>
                        <h6 class="product-qty"><b>Quantity:</b> @item.Quantity</h6>
                    </div>
                }
            }
        </div>
    </div>
  </body>
</html>